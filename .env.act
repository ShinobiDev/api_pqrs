# Environment variables for local act testing
# Copy this to .env.act and fill with your values

# AWS Configuration (for deploy testing - use test values)
AWS_REGION=us-east-1
ECR_REPOSITORY=pqrs-api-test
ECS_CLUSTER_PROD=pqrs-cluster-test
ECS_SERVICE_PROD=pqrs-service-test
ECS_CLUSTER_STAGING=pqrs-cluster-staging-test  
ECS_SERVICE_STAGING=pqrs-service-staging-test
ECS_TASK_DEFINITION=.aws/task-definition.json
CONTAINER_NAME=pqrs-api-container

# PHP Configuration
PHP_VERSION=8.1

# Application Configuration
APP_ENV=testing
APP_DEBUG=true
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# GitHub Token (optional - for API calls)
# GITHUB_TOKEN=your_github_token

# Slack (optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_url

# AWS Credentials (use test/dummy values for local testing)
# NEVER commit real AWS credentials!
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key