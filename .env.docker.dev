# ====================================
# Configuración para Docker Development
# ====================================
APP_NAME="PQRS API Dev"
APP_ENV=local
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost:8000

# ====================================
# Logging
# ====================================
LOG_CHANNEL=stdout
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ====================================
# Base de Datos
# ====================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=pqrs_db
DB_USERNAME=pqrs_user
DB_PASSWORD=secret

# ====================================
# Caché y Sesiones
# ====================================
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ====================================
# Redis
# ====================================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ====================================
# Mail (MailHog para testing)
# ====================================
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@pqrs-api.local"
MAIL_FROM_NAME="${APP_NAME}"

# ====================================
# Sanctum
# ====================================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:8000

# ====================================
# CORS
# ====================================
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"